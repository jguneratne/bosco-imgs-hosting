    <title><%= title %></title>
    <link href="../styles/body-styles.css" rel="stylesheet" />
    <link href="../styles/home-styles.css" rel="stylesheet" />
  </head>

  <body>
    <div class="scroll-wrapper">
      <main class="main">
        <%- include('header.ejs') %>
